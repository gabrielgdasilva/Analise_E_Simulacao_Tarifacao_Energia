@using  Analise_E_Simulacao_Tarifacao_Energia.Models
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Análise e Simulação de Tarifação de Energia Elétrica</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/style.css">

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
           
            @{ 
                UsuarioModel usuario = Session["usuario"] as UsuarioModel;
            }
              
                    @if (usuario == null || usuario.ClienteID == 0)
                    {
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                <li class="alert-link ">@Html.ActionLink("Login", "Login", "Usuario")</li>

                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                @if (usuario.Tipo == 1)
                                {
                                    <li>@Html.ActionLink("Usuarios", "List", "Usuario")</li>
                                }
                                <li>@Html.ActionLink("Meu perfil", "Details", "Usuario")</li>
                                <li>@Html.ActionLink("Detalhes da Empresa", "Details", "Cliente")</li>
                                <li>@Html.ActionLink("Fabricas", "List", "Fabrica")</li>
                                <li>@Html.ActionLink("Sair", "Logout", "Usuario")</li>
                            </ul>
                        </div>
                    }
                
            
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Terifação de Energia Elétrica</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
